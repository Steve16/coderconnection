<%= form_for @proposal, :html => { :multipart => true } do |f| %>
  
  <div class="field">
  	
	<%= f.file_field :avatar %>
  	<%= f.text_field :title, placeholder: "Proposal Title..." %>
    <%= f.text_area :description, placeholder: "Describe the project or job..." %>
  </div>
  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>